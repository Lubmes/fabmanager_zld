<% title(@user.id, "Gebruiker") %>

<div class="w3-row">
	<div class="w3-twothird" style="margin-left: 16.65%">

		<header class="w3-center">
			<h1><%= @user.email %></h1>
			<%= link_to "Bijwerken", 
									[:edit, :admin, @user], 
									class: "edit w3-btn w3-amber" %>
			<%= link_to "Archiveer", 
									[:archive, :admin, @user],
									method: :patch,
									data: { confirm: 'Weet je zeker dat je deze gebruiker wil archiveren?' },
									class: "edit w3-btn w3-red" %>
		</header>

		<div class='w3-center w3-margin-top'>
			<img src="<%= @user.avatar.url unless @user.avatar.file.nil? %>" style="height:300px">
		</div>

		<p> user.bio </p>
		<p> user.fabmoments </p>
		<p> user.comments.order(#van recent tot in verleden) </p>

	</div>
</div>