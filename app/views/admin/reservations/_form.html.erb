<div class="w3-row">
  <div class="w3-half w3-center" style="margin-left: 25%">
    <%= form_for [:admin, reservation] do |f| %>
        <%= f.label :Time %>
        <div>
          <%= f.datetime_select :begin_time %>
          -
          <%= f.datetime_select :end_time %>
        </div>
        <br>
        <div>

        </div>
        <br>
          <div>
            <%= f.label :description %>
          </div>
        <!-- Input -->
          <div>
            <%= f.text_area :description, rows: 10, col: 20 %>
          </div>
        <br><br>
        <!-- Zenden -->
        <div class="w3-center w3-margin-bottom">
          <%= f.button :button, class: "w3-btn w3-blue w3-center" %>
        </div>

    <% end %>
  </div>
</div>