<p>
  <%= link_to "Nieuwe Machine", [:new, :admin, :machine], 
                class: "new w3-btn w3-purple w3-margin-bottom"%>

  <ul>
    <strong>Machines:</strong>
    <% @machines.each do |machine| %>
      <li>
        <%= machine.name%>
       <button> <%= link_to 'Verwijder', admin_machine_path(machine),
              method: :delete,
              data: { confirm: 'Are you sure?' } %> </button>
              <button> <%= link_to 'Edit', edit_admin_machine_path(machine)%></button>
    <% end %>
  </ul>
</p>
 