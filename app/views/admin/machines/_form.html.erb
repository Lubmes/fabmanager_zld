<div class="w3-row">
	<div class="w3-half w3-center" style="margin-left: 25%">
		<%= simple_form_for [:admin, @machine] do |f| %>
			<!-- Input -->
			<%= f.input_field :name, required: true, autofocus: true %>
			<%= f.label :name %>
			<%= f.error :name %>
        <%= f.input_field :capacity, required: true %>
        <%= f.label :Capaciteit %>
        <%= f.error :Capaciteit %>
			
			<br><br>
      <!-- Zenden -->
      <div class="w3-center w3-margin-bottom">
        <%= f.button :button, class: "w3-btn w3-blue w3-center" %>
      </div>

		<% end %>
	</div>
</div>