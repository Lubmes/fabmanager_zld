<div class="w3-row">
	<!-- Basis Profiel gegevens -->
	<div class="w3-twothird" style="margin-left: 16.65%">

      <div class="container">
        <div class="row">
          <div class="profile-header-container">
            <div class="profile-header-img ">
              <img class="img-circle w3-circle" src="<%= @user.avatar.url %>"  class="img-thumbnail" />
              <!-- badge -->
              <div class="rank-label-container">
                <span class="label label-default rank-label w3-lime w3-text-white"><%= @user.username %></span>
              </div>
            </div>
          </div>
        </div>
      </div>


  <div class="w3-card w3-round-xlarge w3-margin-bottom">
    <div class="w3-padding w3-center">
      <ul type="none">
      <li><h1>Gebruikersnaam: <%= @user.username %></h1></li>
        <li>Voornaam:</li>
        <li>Achternaam:</li>
        <li>Telefoon nummer:</li>
      <li>Email: <%= @user.email %></li>
        <li>Biografie:</li>
      <% if policy(@user).show? %>
          <li>Woonplaats: <%= @user.adress %></li>
      <% end %>
        </ul>
    </div>
  </div>


    <!-- Acties -->
    <% if policy(@user).edit? %>
        <% if current_user.admin %>
            <%= link_to [:edit,:admin,@user],
                        class: "edit w3-btn w3-amber w3-round-large" do %>
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <% end %>
        <% else %>
            <%= link_to [:edit, @user],
                        class: "edit w3-btn w3-amber w3-round-large" do %>
                <i class="fa fa-pencil-square-o" Bewerken aria-hidden="true"></i>
            <% end %>
        <% end %>
    <% end %>

    <% if policy(@user).archive? %>
        <%= link_to [:archive, :admin, @user],
                    method: :patch,
                    data: { confirm: 'Weet je zeker dat je deze gebruiker wil archiveren?' },
                    class: "edit w3-btn w3-red w3-round-large" do %>
            <i class="fa fa-archive" Archiveren aria-hidden="true"></i>
        <% end %>
    <% end %>


