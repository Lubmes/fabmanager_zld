<div class="w3-row">
	<div class="w3-half w3-center" style="margin-left: 25%">
		<%= simple_form_for @user, html: {multipart: true} do |f| %>
			<!-- Input -->
        <%= f.input_field :username, required: true, autofocus: true %>
        <%= f.label :username %>
        <%= f.error :username %>
        <%= f.input_field :firstname %>
        <%= f.label :firstname %>
        <%= f.error :firstname %>
        <%= f.input_field :insertion %>
        <%= f.label :insertion %>
        <%= f.error :insertion %>
        <%= f.input_field :lastname %>
        <%= f.label :lastname %>
        <%= f.error :lastname %>
        <%= f.input_field :biography, required: true %>
        <%= f.label :biography %>
        <%= f.error :biography %>
        <%= f.input_field :email, required: true %>
        <%= f.label :email %>
        <%= f.error :email %>
        <%= f.input_field :telephone %>
        <%= f.label :telephone %>
        <%= f.error :telephone %>
        <%= f.input_field :adress %>
        <%= f.label :adress %>
        <%= f.error :adress %>
			<%= f.input_field :password, required: true %>
			<%= f.label :password %>
			<%= "minimaal #{@minimum_password_length} karakters" if @minimum_password_length %>
			<%= f.error :password %>
			<%= f.input_field :password_confirmation, required: true %>
			<%= f.label :password_confirmation %>
			<%= f.error :password_confirmation %><br><br>
			<br><br><br>
			<!-- Upload: Avatar -->
		<div class="w3-center">
			<%= f.label :avatar %><br>
			<%= f.file_field :avatar, as: :file %>
      	</div>

			<br><br>
      <!-- Zenden -->
      <div class="w3-center w3-margin-bottom">
        <%= f.button :button, class: "w3-btn w3-blue w3-center" %>
      </div>

		<% end %>
	</div>
</div>
