<p id="notice"><%= notice %></p>

<div class="w3-margin-left w3-card">
<h1>Evenementen</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event|%>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= link_to 'Details', event, class:"w3-text-black w3-btn w3-purple"%></td>
        <td><%= link_to 'Bewerk', edit_event_path(event), class:"w3-text-black w3-btn w3-amber"%></td>
        <td><%= link_to 'Verwijder', event, method: :delete, data: { confirm: 'Are you sure?' }, class:"w3-text-black w3-btn w3-red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<div class="w3-margin-left w3-card" id="calendar"></div>
<script>
    $('#calendar').fullCalendar({
        events: "<%= @events %>"


    });
</script>

<%= link_to 'New Event', new_event_path, class:"w3-margin-left w3-margin-bottom edit w3-btn w3-amber w3-text-black w3-margin-top"%>
