<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<div id="eventlist">
  <table>
    <thead class="w3-margin-right">
    <tr>
      <th>Title |</th>
      <th> Description |</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Machines</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody class="w3-padding-0", style="font-size:14px">
    <% @events.each do |event|%>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.start_time %></td>
          <td><%= event.end_time %></td>
          <td>
            <% if event.machines.any? %>
                <div class="w3-col m4">
                    <ul id="machines">
                      <% event.machines.each do |machine| %>


                    <p><%= machine.name %></p>
                <% end %>
                </ul>
            </div>
        <% end %>
        </td>
          <td><%= link_to event, class:"btn btn-primary"  do %>
                <i class="fa fa-search" aria-hidden="true"></i>
          <% end %></td>
          <td><%= link_to edit_event_path(event), class:"btn btn-warning"  do %>
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <% end %></td>
          <td><%= link_to event, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  do %>
                <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <div class="row">
    <div class="[ col-xs-12 col-sm-offset-2 col-sm-6 ]">
      <ul class="event-list">
        <li>
          <% @events.each do |events|%>
              <time datetime=<%= events.start_time %>>
                <span class="day">22</span>
                <span class="month">04</span>
                <span class="year">2004</span>
                <span class="time">15:00</span>
              </time>
              <!--<img alt="ATATÃœRK" src="http://www.rampartsofcivilization.com/wp-content/uploads/2011/02/MUSTAFA-KEMAL-ATATURK-150x150.jpg" />-->
              <div class="info">
                <h2 class="title"><%= events.title %></h2>
                <p class="desc"><%= events.description %></p>
              </div>

              <div class="social">
                <ul>
                  <li class="edit" style="width:33%;"><a href="#"><span class="fa fa-pencil-square-o"></span></a></li>
                  <li class="confirm" style="width:34%;"><a href="#"><span class="fa fa-check"></span></a></li>
                  <li class="delete" style="width:33%;"><a href="#"><span class="fa fa-trash-o"></span></a></li>
                </ul>
              </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
