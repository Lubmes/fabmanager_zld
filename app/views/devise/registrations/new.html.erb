<% title("Aanmelding", "Gebruikers") %>
<div class="w3-container">
	<header>
		<h1>Nieuwe aanmelding</h1>
	<header>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.input_field :email, required: true, autofocus: true %>
<%= f.label :email %>
<%= f.error :email %>
<%= f.input_field :password, required: true %>
<%= f.label :password %>
<%= "minimaal #{@minimum_password_length} karakters" if @minimum_password_length %>
<%= f.error :password %>
<%= f.input_field :password_confirmation, required: true %>
<%= f.label :password_confirmation %>
<%= f.error :password_confirmation %><br><br>
<%= f.button :submit, "Registreer aanmelding", class: "w3-btn w3-blue" %>
<% end %>

<br><br>
<%= render "devise/shared/links" %>
