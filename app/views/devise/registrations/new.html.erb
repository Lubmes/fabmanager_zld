<% title("Inschrijving", "Gebruikers") %>
<div class="w3-container w3-margin-top">
	<header>
		<h1 class="w3-center">Nieuwe aanmelding</h1>
	<header>

	<div class="w3-row">
		<div class="w3-third w3-center" style="margin-left: 33.3%">
			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= f.input_field :email, required: true, autofocus: true %>
				<%= f.label :email %>
				<%= f.error :email %>
				<%= f.input_field :password, required: true %>
				<%= f.label :password %>
				<%= "minimaal #{@minimum_password_length} karakters" if @minimum_password_length %>
				<%= f.error :password %>
				<%= f.input_field :password_confirmation, required: true %>
				<%= f.label :password_confirmation %>
				<%= f.error :password_confirmation %><br><br><br>
				<div class="w3-center">
					<%= f.button :submit, "Versturen", class: "w3-btn w3-blue w3-center" %>
				</div>
			<% end %>
		</div>
	</div>

	<br><br><br>
	<%= render "devise/shared/links" %>
</div>