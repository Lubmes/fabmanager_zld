<div class="w3-container w3-margin-top">
	<header class="w3-container">
		<h2 class="w3-center">Fabmomenten</h2>
		<% if current_user %>
			<div class="actions w3-margin-bottom">
				<%= link_to "Nieuw Fabmoment", new_fabmoment_path, 
				class: "new w3-left w3-btn w3-lime"%>

					<div class="">			
						<%= form_tag search_fabmoments_path, 
						method: :get,
						class: "w3-right" do %>
						<%= text_field_tag "search", params[:search], class: "w3-form" %>
						<%= submit_tag "Zoek", class: "w3-btn w3-indigo" %>
					</div>
				<% end %>
			</div>
		<% end %>
	</header>

	<div id="fabmoments" class="w3-row-padding w3-margin-top">
		<% @fabmoments.each do |fabmoment| %>
			<%= link_to fabmoment do %>
				<div class="w3-col m3" id="fabmoment-ajax-<%= fabmoment.id %>">
					<div class="w3-card-2 w3-hover-shadow w3-margin-bottom">
						<header class="w3-container w3-blue-grey w3-center">
							<h4><%= fabmoment.title %>
							</h4>
						</header>
						<div align="center">
						<% if fabmoment.pictures.any?%>
							<img src="<%= fabmoment.pictures.first.image %>" style="max-width:100%;max-height:100%">

						<% end %>	
						</div>
					</div>
				<% end %>

				<% if policy(fabmoment).destroy? %>
					<footer class=" w3-container w3-red w3-margin-bottom w3-center w3-custom-1">
						<%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, fabmoment_url(fabmoment.id, fabmoment), 
								method: :delete, 
								remote: true, 
								data: {confirm: 'Weet U zeker dat U het fabmoment wilt verwijderen?'}, 
								class: "w3-text-black w3-show-inline" %>
					</footer>
				<% end %>
			</div>
		<% end %>
	</div>
</div>


<% if false %>
				<div class="w3-col m3" id="fabmoment-ajax-<%= fabmoment.id %>">
					<div class="w3-card-2 w3-hover-shadow w3-margin-bottom">
						<header class="w3-container w3-blue-grey w3-center">
							<h4><%= fabmoment.title %>
									<%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, fabmoment_url(fabmoment.id, fabmoment), 
												method: :delete, 
												remote: true, 
												data: {confirm: 'Weet U zeker dat U het fabmoment wilt verwijderen?'}, class: "w3-text-black w3-show-inline" %>
							
							</h4>
						</header>
						<div align="center">
							<img src="<%= fabmoment.pictures.first.image %>" style="max-width:100%;max-height:100%">	
						</div>
					</div>
				</div>

				<% end %>